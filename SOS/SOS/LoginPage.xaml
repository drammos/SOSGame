<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SOS.LoginPage"
             Title="LoginPage"
             BackgroundImageSource="loginimage.jpg">


    <Grid>


        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="220"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackLayout>
            <Frame BackgroundColor="White" HeightRequest="70" WidthRequest="70" CornerRadius="20" Padding="0" Margin="0,150,0,0" HorizontalOptions="Center">
                <Image Source="user1.png" Aspect="AspectFill" Margin="0"/>
            </Frame>
        </StackLayout>


        <Grid RowSpacing="5" Grid.Row="1" Margin="20,20,20,0">

            <Grid.RowDefinitions>
                <RowDefinition Height="0"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <Label Grid.Row="1" Text="Sign In" HorizontalOptions="Center" FontSize="Title" FontAttributes="Bold" Padding="0" Margin="0"/>

            <StackLayout Grid.Row="3" Orientation="Vertical" HorizontalOptions="CenterAndExpand">
                
                <Frame BackgroundColor="White" BorderColor="White" Padding="0" HorizontalOptions="FillAndExpand" CornerRadius="30">
                    <StackLayout Orientation="Horizontal">
                        <Frame BackgroundColor="White" HeightRequest="40" WidthRequest="40" CornerRadius="30" Padding="1" Margin="5">
                            <Image Source="username.png" Aspect="AspectFill" Margin="0"/>
                        </Frame>

                        <Entry Text="{Binding UserName}" Placeholder="Username" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="FillAndExpand" Margin="0,0,20,0"/>

                    </StackLayout>
                </Frame>
                
                <Frame BackgroundColor="White" BorderColor="White" Margin="0,15,0,0" Padding="0" HorizontalOptions="FillAndExpand" CornerRadius="30">
                    <StackLayout Orientation="Horizontal">
                        <Frame BackgroundColor="White" HeightRequest="40" WidthRequest="40" CornerRadius="30" Padding="5" Margin="5">
                            <Image Source="locked.png" Aspect="AspectFill" Margin="0"/>
                        </Frame>

                        <Entry Text="{Binding Password}" Placeholder="Password" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="FillAndExpand" Margin="0,0,20,0"/>

                    </StackLayout>
                </Frame>

                <Button Text="SIGN IN" BackgroundColor="BlueViolet" TextColor="Black" FontAttributes="Bold" CornerRadius="30" WidthRequest="200" Margin="0,15,0,0" Command="{Binding LoginCommand}"/>

                <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Margin="0,60,0,0" Padding="0">
                    <Label Text="New User?" TextColor="DarkGray" FontSize="Small" />
                    <Label Text=" Sign Up" TextColor="LightGray" FontAttributes="Bold" FontSize="Small" />
                </StackLayout>
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>
    
    