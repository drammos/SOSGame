<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SOS.UseControl.FlyoutHead">
    <StackLayout Padding="40" Spacing="10">

        <Image
            x:Name="lblUserPhoto"
            HeightRequest="80"
            HorizontalOptions="Center"
            Source="user.png"
         />
        <Label x:Name="lblUserName" FontSize="20" FontAttributes="Bold" TextColor="#48bfe3" HorizontalOptions="Center"/>
    </StackLayout>
</ContentView>
