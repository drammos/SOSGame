<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SOS.UseControl.FlyoutHead">
    <StackLayout Padding="20">
        <HorizontalStackLayout>
            <Label Text="Lo"
        </HorizontalStackLayout>
        <Label x:Name="lblUserName" FontSize="20" FontAttributes="Bold" TextColor="#48bfe3"/>
        <Label x:Name="lblUserEmail" FontSize="16" TextColor="#48bfe3"/>
        <Image
            x:Name="lblUserPhoto"
            HeightRequest="100"
            HorizontalOptions="Center"
         />
    </StackLayout>
</ContentView>
