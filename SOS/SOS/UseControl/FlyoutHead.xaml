<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SOS.UseControl.FlyoutHead">
    <StackLayout Padding="50" Spacing="10" BackgroundColor="{AppThemeBinding Light={StaticResource LightPrimaryColor}, Dark={StaticResource DarkPrimaryColor}}">


        <Frame HeightRequest="100" WidthRequest="100" CornerRadius="50" Padding="1" Margin="5">
            <Image
                x:Name="lblUserPhoto"
                HorizontalOptions="Fill"
                Aspect="Fill"
                Margin="0"
                Source="{AppThemeBinding Light=user.png, Dark=user_dark.png}"
            />
        </Frame>
        <Label x:Name="lblUserName" FontSize="20" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center"/>
    </StackLayout>
</ContentView>
